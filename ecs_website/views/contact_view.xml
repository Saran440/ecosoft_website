<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- page list view  -->
    <record id="view_customer_contact_list" model="ir.ui.view">
        <field name="name">customer.contact.list</field>
        <field name="model">customer.contact</field>
        <field name="arch" type="xml">
            <tree string="Customer Contact">
                <field name="name"/>
                <field name="email"/>
                <field name="company_name"/>
                <field name="subject"/>
                <field name="write_date"/>
            </tree>
        </field>
    </record>

    <!-- page form view  -->
    <record id="view_customer_contact_form" model="ir.ui.view">
        <field name="name">customer.contact.form</field>
        <field name="model">customer.contact</field>
        <field name="arch" type="xml">
            <form string="Customer Contact Form">
                <sheet>
                    <group string="Information">
                        <group>
                            <field name="name"/>
                            <field name="company_name"/>
                        </group>
                        <group>
                            <field name="email"/>
                        </group>
                    </group>
                    <group string="Subject">
                        <group>
                            <field name="title"/>
                            <field name="message"/>
                        </group>
                        <group>
                            <field name="subject"/>
                        </group>
                    </group>
                    <group string="Question">
                        <group>
                            <field name="type_system1"/>
                            <field name="module_interesting"/>
                            <field name="solve"/>
                        </group>
                        <group>
                            <field name="type_system2"/>
                            <field name="reason"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_customer_contact" model="ir.actions.act_window">
        <field name="name">Customer Contact</field>
        <field name="res_model">customer.contact</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_customer_contact_list"/>
        <!-- <field name="search_view_id" ref="view_blog_post_search"/> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Not Contact
            </p>
        </field>
    </record>

    <menuitem name="Customer Contact"
        id="menu_customer_contact"
        sequence="30"
        parent="website.menu_website_configuration"
        action="action_customer_contact"/>

</odoo>
