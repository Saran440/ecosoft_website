<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Jobs page -->
        <record id="jobs" model="ir.ui.view">
            <field name="name">Jobs</field>
            <field name="type">qweb</field>
            <field name="key">website.jobs</field>
            <field name="arch" type="xml">
                <t name="Approach" t-name="website.jobs">
                    <t t-call="website.layout">
                        <t t-set="title">Ecosoft | Your ERP Partner</t>
                        <div class="oe_structure">

                            <section class="s_cover parallax bg-black-50 pb40 pt128" data-scroll-background-ratio="0" style="background-image: none;">
                                <span class="s_parallax_bg oe_img_bg oe_custom_bg img-dim" style="background-image: url(&quot;/ecs_website/static/src/img/background/jobs/banner_jobs.jpg&quot;); background-position: 50% 0px;"/>
                                <div class="container main-body">
                                    <div class="row s_nb_column_fixed" id="white">
                                        <div class="col-lg-12 s_title" data-name="Title">
                                            <h1 class="s_title_thin o_default_snippet_text">
                                                <span class="font-bold" id="white">JOIN OUR TEAM</span>
                                            </h1>
                                        </div>
                                        <div class="col-lg-12 s_text pt16 pb16" data-name="Text">
                                            <p class="lead o_default_snippet_text">
                                                <span id="smoke">Home | </span>
                                                <span class="font-bold">Jobs</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <div class="container main-body top-5-percent">
                                <div class="text-center pb16">
                                    <h2>
                                        <span>JOIN</span>
                                        <span id="green">OUR TEAM</span>
                                    </h2>
                                    <h6>Are you looking for new wow?</h6>
                                </div>
                                <div class="text-muted o_default_snippet_text pt16 btn-width text-center" style="margin: 0 auto;">
                                    <p>Ecosoft is a Lean, Agile and Open Source organisation who works professionally with all stakeholders, customer, suppliers and team members!</p>
                                </div>
                                <div class="o_default_snippet_text pt16 text-center">
                                    <p>
                                        <span>Of Course! with Open Source Way of Working...<span id="green"><b>FREEDOM</b></span></span>
                                    </p>
                                </div>
                            </div>

                            <section class="s_cover parallax bg-whitesmoke top-5-percent">
                                <div class="container main-body text-center pt40 pb40">
                                    <div class="pb40">
                                        <img src="/ecs_website/static/src/img/background/jobs/infographic_3.png"/>
                                    </div>
                                    <div class="o_default_snippet_text text-muted btn-width" style="margin: 0 auto;">
                                        <p>To be a Lean Organization, more value with fewer resources and empowering team members to collaborate and make team decisions, which is Agile environment.</p>
                                    </div>
                                </div>
                            </section>

                            <section class="s_cover parallax bg-grey">
                                <div class="container main-body">
                                    <div class="row">
                                        <div class="col-lg-6 pt64 pb32" id="white">
                                            <h2 class="o_default_snippet_text pt16">
                                                <span id="green">IS THIS</span>
                                                <span>YOU?</span>
                                            </h2>
                                            <div class="o_default_snippet_text" id="white">
                                                <div class="row">
                                                    <div class="col-sm-12 pt16 pb8" data-name="Box">
                                                        <img class="s_features_grid_icon" src="/ecs_website/static/src/img/icon/icon_feature_1.png" alt="accounting"/>
                                                        <div class="s_features_grid_content">
                                                            <p class="o_default_snippet_text font-16">ERP System Analyst</p>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 pt8" data-name="Box">
                                                        <img class="s_features_grid_icon" src="/ecs_website/static/src/img/icon/icon_feature_2.png" alt="manufacturing"/>
                                                        <div class="s_features_grid_content">
                                                            <p class="o_default_snippet_text font-16">Web Developer / ERP Programmer</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 pt0 pb0">
                                            <img src="/ecs_website/static/src/img/background/jobs/img_jobs.jpg" style="max-width:150%;"/>
                                        </div>
                                    </div>
                                </div>
                            </section>

                        </div>
                    </t>
                </t>
            </field>
        </record>

        <record id="jobs_page" model="website.page">
            <field name="url">/jobs</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="jobs"/>
        </record>

    </data>
</odoo>
