<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Our Approach page -->
        <record id="our_approach" model="ir.ui.view">
            <field name="name">Our Approach</field>
            <field name="type">qweb</field>
            <field name="key">website.approach</field>
            <field name="arch" type="xml">
                <t name="Approach" t-name="website.approach">
                    <t t-call="website.layout">
                        <t t-set="title">Ecosoft | Your ERP Partner</t>
                        <div class="oe_structure">
                            <section class="s_cover parallax pb40 pt128" data-scroll-background-ratio="0" style="background-image: none;">
                                <span class="s_parallax_bg oe_img_bg oe_custom_bg img-dim" style="background-image: url(&quot;/ecs_website/static/src/img/background/our_approach/banner_ourApproach.jpg&quot;); background-position: 50% 0px;"/>
                                <div class="container main-body">
                                    <div class="row s_nb_column_fixed" id="white">
                                        <div class="col-lg-12 s_title" data-name="Title">
                                            <h1 class="s_title_thin o_default_snippet_text">
                                                <span class="font-bold" id="white">ECOSOFT ODOO EXPERIENCE</span>
                                            </h1>
                                        </div>
                                        <div class="col-lg-12 s_text pt16 pb16" data-name="Text">
                                            <p class="lead o_default_snippet_text">
                                                <span id="smoke">Home | </span>
                                                <span class="font-bold">Our Approach</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <div class="container main-body">
                                <div class="text-center top-5-percent">
                                    <h2>
                                        <span>OUR</span>
                                        <span id="green">APPROACH</span>
                                    </h2>
                                    <p class="text-muted">เข้าใจธุรกิจลูกค้าคือหัวใจสำคัญในความสำเร็จของระบบ ERP</p>
                                </div>

                                <div class="row s_nb_column_fixed top-5-percent">
                                    <div class="col-lg-6 pt16 pb16">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <div class="col-lg-4 ">
                                                <img src="/ecs_website/static/src/img/icon/icon_ourApproach_1.png" class="img-fluid rounded-circle d-block mx-auto shadow"/>
                                            </div>
                                            <div class="col-lg-8">
                                                <h5 class="o_default_snippet_text" id="green">UNDERSTAND</h5>
                                                <p class="text-muted o_default_snippet_text">
                                                      ต้องเข้าใจกระบวนการทางธุรกิจและความต้องการอย่างชัดเจน
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <div class="col-lg-4">
                                                <img src="/ecs_website/static/src/img/icon/icon_ourApproach_2.png" class="img-fluid rounded-circle d-block mx-auto shadow"/>
                                            </div>
                                            <div class="col-lg-8">
                                                <h5 class="o_default_snippet_text" id="green">SIMULATE</h5>
                                                <p class="text-muted o_default_snippet_text">
                                                      สามารถจำลองกระบวนการทำงานและปรับเข้ากับระบบ ERP ซอฟต์แวร์
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <div class="col-lg-4">
                                                <img src="/ecs_website/static/src/img/icon/icon_ourApproach_3.png" class="img-fluid rounded-circle d-block mx-auto shadow"/>
                                            </div>
                                            <div class="col-lg-8">
                                                <h5 class="o_default_snippet_text" id="green">COMMUNICATE</h5>
                                                <p class="text-muted o_default_snippet_text">
                                                      พูดภาษาเดียวกันกับผู้บริหารและ users ไม่จำกัดเพียงแค่ภาษา IT
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <div class="col-lg-4">
                                                <img src="/ecs_website/static/src/img/icon/icon_ourApproach_4.png" class="img-fluid rounded-circle d-block mx-auto shadow"/>
                                            </div>
                                            <div class="col-lg-8">
                                                <h5 class="o_default_snippet_text" id="green">TRANSFORM</h5>
                                                <p class="text-muted o_default_snippet_text">
                                                      สามารถเปลี่ยนความต้องการของธุรกิจให้กลายเป็นข้อมูลที่มีประโยชน์ต่อธุรกิจในรูปของรายงานซึ่งสอดคล้องกับมาตรฐานและกฎระเบียบทั้งภายในและภายนอกองค์กร
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="top-5-percent">
                                    <img src="/ecs_website/static/src/img/background/our_approach/infographic_1.jpg" class="img-fluid mx-auto"/>
                                </div>
                            </div>

                            <section class="s_cover parallax bg-whitesmoke pb40 pt40 top-5-percent" data-scroll-background-ratio="0">
                                <div class="container main-body text-center">
                                    <iframe width="560" height="315" src="https://www.youtube.com/embed/EsNrzZdXNss" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"></iframe>
                                </div>
                            </section>

                            <section class="s_features_grid top-5-percent pb40">
                                <div class="container main-body">
                                    <div class="row">
                                        <div class="col-lg-6 pb60">
                                            <div class="col-lg-12" data-name="Box">
                                                <h2 class="o_default_snippet_text pb16">
                                                    <span>AGILE</span>
                                                    <span id="green">METHODOLOGY</span>
                                                </h2>
                                                <p class="text-muted o_default_snippet_text">
                                                    เราเลือกวิถีทาง AGILE เพราะเราเชื่อว่าความยืดหยุ่น และการตอบสนองอย่างรวดเร็วคือหลักการที่ถูกต้องของโครงการด้านซอฟต์แวร์
                                                </p>
                                                <p class="text-muted o_default_snippet_text">
                                                    AGILE ถูกออกแบบโดยยึดหลักการสำคัญ 4 ประการ
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="row">
                                                <div class="col-lg-12" data-name="Box">
                                                    <p class="s_features_grid_icon font-42 font-bold" id="green">01</p>
                                                    <div class="s_features_grid_content">
                                                        <h4 id="green">INDIVIDUALS AND INTERACTIONS</h4>
                                                        <p class="o_default_snippet_text text-muted">ให้ความสำคัญสื่อสารกันโดยตรงและสม่ำเสมอ มากกว่ากระบวนการสื่อสารหรือเครื่องมือ</p>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 pt16 pb16" data-name="Box">
                                                    <p class="s_features_grid_icon font-42 font-bold" id="green">02</p>
                                                    <div class="s_features_grid_content">
                                                        <h4 id="green">WORKING SOFTWARE</h4>
                                                        <p class="o_default_snippet_text text-muted">ให้ความสำคัญกับการส่งมอบซอฟต์แวร์ที่ใช้ได้จริงอย่างสม่ำเสมอ มากกว่างานเอกสาร</p>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 pt16 pb16" data-name="Box">
                                                    <p class="s_features_grid_icon font-42 font-bold" id="green">03</p>
                                                    <div class="s_features_grid_content">
                                                        <h4 id="green">CUSTOMER COLLABORATION</h4>
                                                        <p class="o_default_snippet_text text-muted">ส่งเสริมความร่วมมือกับลูกค้า มากกว่ายึดติดกับสัญญา</p>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 pt16 pb40" data-name="Box">
                                                    <p class="s_features_grid_icon font-42 font-bold" id="green">04</p>
                                                    <div class="s_features_grid_content">
                                                        <h4 id="green">RESPONDING TO CHANGE</h4>
                                                        <p class="o_default_snippet_text text-muted">พร้อมปรับเปลี่ยนแผนการตามสภาพงานจริง มากกว่ายึดติดกับแผนเริ่มต้น</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <record id="our_approach_page" model="website.page">
            <field name="url">/our_approach</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="our_approach"/>
        </record>

    </data>
</odoo>
