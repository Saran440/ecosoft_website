<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Contact page -->
        <template id="ecs_contact">
            <t t-call="website.layout">
                <t t-set="title">Ecosoft | Your ERP Partner</t>
                <div class="oe_structure">
                    <section class="s_cover parallax bg-black-50 pb40 pt128" data-scroll-background-ratio="0" style="background-image: none;">
                        <span class="s_parallax_bg oe_img_bg oe_custom_bg img-dim" style="background-image: url(&quot;/ecs_website/static/src/img/background/contact/banner_contact.jpg&quot;); background-position: 50% 0px;"/>
                        <div class="container main-body">
                            <div class="row s_nb_column_fixed" id="white">
                                <div class="col-lg-12 s_title" data-name="Title">
                                    <h1 class="s_title_thin o_default_snippet_text">
                                        <span class="font-bold" id="white">CONTACT US</span>
                                    </h1>
                                </div>
                                <div class="col-lg-12 s_text pt16 pb16" data-name="Text">
                                    <p class="lead o_default_snippet_text">
                                        <span id="smoke">Home | </span>
                                        <span class="font-bold">Contact</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>

                    <div class="container main-body">
                        <div class="top-5-percent text-center pb16">
                            <h2>
                                <span>GET</span>
                                <span id="green">IN TOUCH</span>
                            </h2>
                        </div>
                        <div class="row o_default_snippet_text">
                            <div class="col-lg-6 pb16">
                                <p>........GOOGLE MAPS........</p>
                            </div>
                            <div class="col-lg-6 pb16">
                                <h4 class="font-bold"><span t-field="res_company.name"/><br/></h4>
                                <p class="pt16"><span class="font-bold">Head Office</span><br/>
                                    Tax ID : <span t-field="res_company.vat"/><br/>
                                    <t t-if="res_company.street"><span t-field="res_company.street"/></t>
                                    <t t-if="res_company.street2"><span>,</span><span t-field="res_company.street2"/></t>
                                    <t t-if="res_company.city"><span>,</span><span t-field="res_company.city"/></t>
                                    <t t-if="res_company.state_id"><span>,</span><span t-field="res_company.state_id"/></t>
                                    <t t-if="res_company.zip"><span t-field="res_company.zip"/></t>
                                    <t t-if="res_company.country_id"><span>,</span><span t-field="res_company.country_id"/></t>
                                </p>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="pt16 pb16" data-name="Box">
                                            <img class="s_features_grid_icon" src="/ecs_website/static/src/img/icon/icon_contact_3.png" alt="Phone"/>
                                            <div class="s_features_grid_content">
                                                <p class="o_default_snippet_text font-bold">Phone</p>
                                                <p class="o_default_snippet_text"><span t-field="res_company.phone"></span></p>
                                            </div>
                                        </div>
                                        <div class="pt16 pb16" data-name="Box">
                                            <img class="s_features_grid_icon" src="/ecs_website/static/src/img/icon/icon_contact_1.png" alt="Email"/>
                                            <div class="s_features_grid_content">
                                                <p class="o_default_snippet_text font-bold">e-Mail</p>
                                                <p class="o_default_snippet_text"><span t-field="res_company.email"></span></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="pt16 pb16" data-name="Box">
                                            <img class="s_features_grid_icon" src="/ecs_website/static/src/img/icon/icon_contact_2.png" alt="Mobile"/>
                                            <div class="s_features_grid_content">
                                                <p class="o_default_snippet_text font-bold">Mobile</p>
                                                <p class="o_default_snippet_text">+66 (8) 1 841 7480</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="top-5-percent pb64">
                            <h5 class="font-bold">CONTACT US FOR A FREE DEMO!</h5>
                            <form>
                                <div class="form-row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>Your Name <em>(required)</em> <span id="red">*</span></span>
                                            <input type="text" class="form-control" name="user_name" required="required"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>Your e-Mail <em>(required)</em> <span id="red">*</span></span>
                                            <input type="email" class="form-control" name="email" required="required"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>Company Name <em>(required)</em> <span id="red">*</span></span>
                                            <input type="text" class="form-control" name="company_name" required="required"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-6"/>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>Your Title</span>
                                            <input type="text" class="form-control" name="title"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>Subject <em>(required)</em> <span id="red">*</span></span>
                                            <input type="text" class="form-control" name="subject" required="required"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>Message <em>(required)</em> <span id="red">*</span></span>
                                            <textarea class="form-control" rows="5" name="message" required="required"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6"/>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>What kind of system are you using?</span>
                                            <input type="text" class="form-control" name="type_system1"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>What kind of system are you using?</span>
                                            <input type="text" class="form-control" name="type_system2"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>What module(s) are you interested in?</span>
                                            <textarea class="form-control" rows="5" name="module"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span>Reason(s) of finding a new system?</span>
                                            <textarea class="form-control" rows="5" name="reason"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 bg-whitesmoke pt8 pb8">
                                        <div class="form-group">
                                            <div class="col-lg-10">
                                                <span>Please prove that you are human by solving the equation <em>(required)</em> <span id="red">*</span></span>
                                            </div>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="solve" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 text-center">
                                        <div class="s_btn pt16" data-name="Button">
                                            <input type="submit" class="btn btn-success bg-green btn-md btn-round btn-width-15" value="Submit"/>
                                            <input type="reset" class="btn btn-round btn-width-15" value="Clear"/>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <record id="contact_page" model="website.page">
            <field name="url">/contact</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="ecs_contact"/>
        </record>
    </data>
</odoo>
