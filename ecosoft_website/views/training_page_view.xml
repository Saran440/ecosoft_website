<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Training page -->
        <record id="trainings" model="ir.ui.view">
            <field name="name">Trainings</field>
            <field name="type">qweb</field>
            <field name="key">website.trainings</field>
            <field name="arch" type="xml">
                <t name="Solution" t-name="website.trainings">
                    <t t-call="website.layout">
                        <t t-set="title">Ecosoft | Your ERP Partner</t>
                        <div class="oe_structure">
                            <section class="s_cover parallax bg-black-50 pb40 pt128" data-scroll-background-ratio="0" style="background-image: none;">
                                <span class="s_parallax_bg oe_img_bg oe_custom_bg img-dim" style="background-image: url(&quot;/ecosoft_website/static/src/img/background/training/banner_training.jpg&quot;); background-position: 50% 0px;"/>
                                <div class="container main-body">
                                    <div class="row s_nb_column_fixed" id="white">
                                        <div class="col-lg-12 s_title" data-name="Title">
                                            <h1 class="s_title_thin o_default_snippet_text">
                                                <span class="font-bold" id="white">KNOW MORE ABOUT ODOO</span>
                                            </h1>
                                        </div>
                                        <div class="col-lg-12 s_text pt16 pb16" data-name="Text">
                                            <p class="lead o_default_snippet_text">
                                                <span id="smoke">Home | </span>
                                                <span class="font-bold">Training</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <div class="container main-body">
                                <div class="top-5-percent">
                                    <h2 class="pb16 text-center">
                                        <span>ODOO</span>
                                        <span id="green">TRAINING</span>
                                    </h2>
                                    <div class="row s_nb_column_fixed">
                                        <h5 class="o_default_snippet_text">2 DAYS ODOO V9 FUNDAMENTAL (FUNCTION/TECHNICAL)</h5>
                                        <p class="text-muted o_default_snippet_text">
                                            This course will be in walk through format. The trainee will learn how Odoo works both Functional and Technical.<br/>
                                            The training will last 2 consecutive days.
                                        </p>
                                    </div>

                                    <hr class="hr-text" data-content="DAY 1"/>
                                    <div class="row align-items-center">
                                        <div class="col-lg-6">
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Overview of Odoo + Functional Demo</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Setup new Company</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Accounting Setup</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Trading Workflow</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Manufacturing Workflow</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Warehouse Management</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Analytical and Financial Reports</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Odoo v9 Server Installation (Ubuntu only)</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="hr-text top-5-percent" data-content="DAY 2"/>
                                    <div class="row align-items-center">
                                        <div class="col-lg-6">
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Odoo v9 Web Framework Overview</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Software Installation from Source</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Development Environment Setup</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Odoo module development</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">ORM (Object Relational Mapping)</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Model View Controller of Odoo</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Inheritance</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Computed fields and default values</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Onchange</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Model constraints</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Workflow</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Security &amp; Rules</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Wizards</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Internationalization</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Data Import/Export</p>
                                                </div>
                                            </div>
                                            <div class="row text-muted o_default_snippet_text col-sm-12 pt4 pb4" data-name="Box">
                                                <i class="fa fa-2x fa-check-circle s_features_grid_icon" id="green"/>
                                                <div class="s_features_grid_content">
                                                    <p class="o_default_snippet_text font-16">Special Topics</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <section class="s_cover parallax bg-whitesmoke top-5-percent">
                                <div class="container main-body">
                                    <div class="row d-flex align-items-stretch pt64 pb64">
                                        <div class="card bg-whitesmoke col-lg-4">
                                            <div class="card-content" style="background-image: url(&quot;/ecosoft_website/static/src/img/background/training/background_training_1.jpg&quot;); background-position: 50% 0px; height:100%;">
                                                <div class="card-body">
                                                    <h4 class="o_default_snippet_text text-center pt40" id="white">To know Odoo,<br/>Open Source ERP#1 </h4>
                                                    <div class="s_btn text-center pt24" data-name="Buttons">
                                                        <a href="/aboutus" class="btn btn-white o_default_snippet_text btn-round btn-width text-muted">Detail</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card bg-whitesmoke col-lg-4">
                                            <div class="card-content" style="background-image: url(&quot;/ecosoft_website/static/src/img/background/training/background_training_2.jpg&quot;); background-position: 50% 0px; height:100%;">
                                                <div class="card-body">
                                                    <h4 class="o_default_snippet_text text-center pt32" id="white">2 Days<br/>Odoo v9 Fundamental <br/>(Functional / Technical)</h4>
                                                    <div class="s_btn text-center pt8" data-name="Buttons">
                                                        <a href="/aboutus" class="btn btn-white o_default_snippet_text btn-round btn-width text-muted">Detail</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card bg-whitesmoke col-lg-4">
                                            <div class="card-content" style="background-image: url(&quot;/ecosoft_website/static/src/img/background/training/background_training_3.jpg&quot;); background-position: 50% 0px; height:100%;">
                                                <div class="card-body">
                                                    <h4 class="o_default_snippet_text text-center pt32" id="white">3 Days<br/>Odoo Advance Technical <br/>Training (workshop)</h4>
                                                    <div class="s_btn text-center pt8" data-name="Buttons">
                                                        <a href="/aboutus" class="btn btn-white o_default_snippet_text btn-round btn-width text-muted">Detail</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <record id="training_page" model="website.page">
            <field name="url">/trainings</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="trainings"/>
        </record>
    </data>
</odoo>
