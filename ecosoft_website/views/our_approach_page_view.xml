<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Contact Us page -->
        <record id="our_approach" model="ir.ui.view">
            <field name="name">Our Approach</field>
            <field name="type">qweb</field>
            <field name="key">website.approach</field>
            <field name="arch" type="xml">
                <t name="Approach" t-name="website.approach">
                    <t t-call="website.layout">
                        <t t-set="title">Ecosoft | Your ERP Partner</t>
                        <div class="oe_structure">
                            <section class="s_cover parallax bg-black-50 pb40 pt128" data-scroll-background-ratio="0" style="background-image: none;">
                                <span class="s_parallax_bg oe_img_bg oe_custom_bg img-dim" style="background-image: url(&quot;/ecosoft_website/static/src/img/background/our_approach/banner_ourApproach.jpg&quot;); background-position: 50% 0px;"/>
                                <div class="container main-body">
                                    <div class="row s_nb_column_fixed" id="white">
                                        <div class="col-lg-12 s_title" data-name="Title">
                                            <h1 class="s_title_thin o_default_snippet_text">
                                                <span class="font-bold" id="white">ECOSOFT ODOO EXPERIENCE</span>
                                            </h1>
                                        </div>
                                        <div class="col-lg-12 s_text pt16 pb16" data-name="Text">
                                            <p class="lead o_default_snippet_text">Home | <b>Our Approach</b></p>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <div class="container main-body">
                                <div class="text-center top-5-percent">
                                    <h2 class="bottom-20-px">
                                        <span>OUR</span>
                                        <span id="green">APPROACH</span>
                                    </h2>
                                    <p>เข้าใจธุรกิจลูกค้าคือหัวใจสำคัญในความสำเร็จของระบบ ERP</p>
                                </div>

                                <div class="row s_nb_column_fixed top-5-percent">
                                    <div class="col-lg-6 pt16 pb16">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <div class="col-lg-4 ">
                                                <img src="/ecosoft_website/static/src/img/icon/icon_ourApproach_1.png" class="img-fluid rounded-circle d-block mx-auto shadow"/>
                                            </div>
                                            <div class="col-lg-8">
                                                <h5 class="o_default_snippet_text" id="green">UNDERSTAND</h5>
                                                <p class="text-muted o_default_snippet_text">
                                                      ต้องเข้าใจกระบวนการทางธุรกิจและความต้องการอย่างชัดเจน
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <div class="col-lg-4">
                                                <img src="/ecosoft_website/static/src/img/icon/icon_ourApproach_2.png" class="img-fluid rounded-circle d-block mx-auto shadow"/>
                                            </div>
                                            <div class="col-lg-8">
                                                <h5 class="o_default_snippet_text" id="green">SIMULATE</h5>
                                                <p class="text-muted o_default_snippet_text">
                                                      สามารถจำลองกระบวนการทำงานและปรับเข้ากับระบบ ERP ซอฟต์แวร์
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <div class="col-lg-4">
                                                <img src="/ecosoft_website/static/src/img/icon/icon_ourApproach_3.png" class="img-fluid rounded-circle d-block mx-auto shadow"/>
                                            </div>
                                            <div class="col-lg-8">
                                                <h5 class="o_default_snippet_text" id="green">COMMUNICATE</h5>
                                                <p class="text-muted o_default_snippet_text">
                                                      พูดภาษาเดียวกันกับผู้บริหารและ users ไม่จำกัดเพียงแค่ภาษา IT
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <div class="col-lg-4">
                                                <img src="/ecosoft_website/static/src/img/icon/icon_ourApproach_4.png" class="img-fluid rounded-circle d-block mx-auto shadow"/>
                                            </div>
                                            <div class="col-lg-8">
                                                <h5 class="o_default_snippet_text" id="green">TRANSFORM</h5>
                                                <p class="text-muted o_default_snippet_text">
                                                      สามารถเปลี่ยนความต้องการของธุรกิจให้กลายเป็นข้อมูลที่มีประโยชน์ต่อธุรกิจในรูปของรายงานซึ่งสอดคล้องกับมาตรฐานและกฎระเบียบทั้งภายในและภายนอกองค์กร
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <record id="our_approach_page" model="website.page">
            <field name="url">/our_approach</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="our_approach"/>
        </record>

    </data>
</odoo>
